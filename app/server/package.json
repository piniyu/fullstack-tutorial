{
  "name": "typescript-graphql",
  "scripts": {
    "start": "node dist/server",
    "clean": "rm -rf dist",
    "build": "npm -s run clean && npm -s run generate && tsc",
    "generate": "npm -s run gen:prisma && npm -s run generate:nexus",
    "gen:prisma": "npx prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema",
    "postinstall": "npm -s run generate",
    "dev": "ts-node-dev --no-notify --respawn --transpileOnly src/server",
    "migrate": "npx prisma migrate save --experimental",
    "migrateup": "npx prisma migrate up --experimental --verbose",
    "studio": "npx prisma studio --experimental",
    "seed": "npx ts-node prisma/seed.ts",
    "gen:schema": "graphql-schema-typescript generate-ts src/schema.gql --output src/schemaTypes.d.ts --typePrefix=''",
    "cron": "npx ts-node src/models/poll.ts"
  },
  "dependencies": {
    "@prisma/client": "^2.0.0",
    "@types/faker": "^4.1.12",
    "@types/graphql-iso-date": "^3.3.3",
    "@types/node-fetch": "2.5.5",
    "apollo-server": "2.11.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.4",
    "dayjs": "^1.8.28",
    "faker": "^4.1.0",
    "graphql": "^14.6.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-middleware": "^4.0.2",
    "graphql-schema-typescript": "^1.3.2",
    "graphql-shield": "^7.3.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "nexus": "^0.12.0",
    "nexus-prisma": "^0.11.1"
  },
  "devDependencies": {
    "@prisma/cli": "^2.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.155",
    "@types/node": "^13.13.12",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "eslint": "^6.8.0",
    "jest": "^25.5.4",
    "ts-node": "^8.10.2",
    "ts-node-dev": "1.0.0-pre.44",
    "typescript": "^3.9.5"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}